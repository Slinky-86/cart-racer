// Blueprint Class: BP_ShortcutTrigger
// Parent Class: WRShortcutTrigger
// 
// Individual shortcut entrance triggers with visual feedback
// Features:
// - Difficulty-based color coding
// - Speed requirement checking
// - Discovery state management
// - Path visualization with splines

Begin Object Class=/Script/Engine.BlueprintGeneratedClass Name="BP_ShortcutTrigger_C"
   ParentClass=/Script/WastelandRacers.WRShortcutTrigger
   ClassGeneratedBy=/Game/Blueprints/Tracks/BP_ShortcutTrigger.BP_ShortcutTrigger
   
   // Trigger Box
   Begin Object Class=/Script/Engine.BoxComponent Name="TriggerBox"
      BoxExtent=(X=150.0,Y=150.0,Z=100.0)
      CollisionEnabled=QueryOnly
      CollisionObjectType=WorldStatic
      CollisionResponseToAllChannels=Ignore
      CollisionResponseToChannel=Vehicle,Overlap
   End Object
   
   // Visual Mesh
   Begin Object Class=/Script/Engine.StaticMeshComponent Name="VisualMesh"
      StaticMesh=/Game/Meshes/Tracks/SM_Shortcut_Entrance.SM_Shortcut_Entrance
