      CollisionEnabled=NoCollision
   End Object
   
   // Spline Path
   Begin Object Class=/Script/Engine.SplineComponent Name="ShortcutPath"
      SplinePointType=Curve
      bClosedLoop=false
   End Object
   
   // Visual Effect
   Begin Object Class=/Script/Niagara.NiagaraComponent Name="VisualEffect"
      Asset=/Game/Effects/Particles/NS_Shortcut_Indicator.NS_Shortcut_Indicator
      bAutoActivate=false
   End Object
   
End Object
