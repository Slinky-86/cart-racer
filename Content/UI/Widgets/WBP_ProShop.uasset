// Widget Blueprint: WBP_ProShop
// 
// Complete Pro Shop interface for purchasing upgrades and vehicles
// Features:
// - Tabbed interface (Upgrades, Vehicles, Characters, Engine Classes, Customization)
// - Real-time currency display
// - Purchase confirmation dialogs
// - Progress bars for upgrade levels
// - 3D preview of vehicles and upgrades
// - Mobile-optimized layout

Begin Object Class=/Script/UMG.WidgetBlueprint Name="WBP_ProShop"
   WidgetTree=Begin Object Class=/Script/UMG.WidgetTree Name="WidgetTree"
      RootWidget=Begin Object Class=/Script/UMG.CanvasPanel Name="RootCanvas"
         
         // Background
         Slot[0]=Begin Object Class=/Script/UMG.CanvasPanelSlot
            Content=Begin Object Class=/Script/UMG.Image Name="BackgroundImage"
               Brush=(ImageSize=(X=1920,Y=1080),Texture=/Game/UI/Textures/T_ProShop_Background.T_ProShop_Background)
            End Object
            Anchors=(Minimum=(X=0,Y=0),Maximum=(X=1,Y=1))
            Offsets=(Left=0,Top=0,Right=0,Bottom=0)
         End Object
         
         // Header with Currency Display
         Slot[1]=Begin Object Class=/Script/UMG.CanvasPanelSlot
            Content=Begin Object Class=/Script/UMG.HorizontalBox Name="HeaderBox"
               
               // Pro Shop Title
               Slot[0]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                  Content=Begin Object Class=/Script/UMG.TextBlock Name="ShopTitle"
                     Text="WASTELAND RACERS PRO SHOP"
                     Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Bold.F_Borderlands_Bold,Size=36)
                     ColorAndOpacity=(R=1,G=0.8,B=0,A=1)
                  End Object
                  Size=(SizeRule=Fill,Value=1)
               End Object
               
               // Currency Display
               Slot[1]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                  Content=Begin Object Class=/Script/UMG.VerticalBox Name="CurrencyDisplay"
                     
                     // Race Points
                     Slot[0]=Begin Object Class=/Script/UMG.VerticalBoxSlot
                        Content=Begin Object Class=/Script/UMG.HorizontalBox Name="RacePointsBox"
                           Slot[0]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                              Content=Begin Object Class=/Script/UMG.Image Name="RacePointsIcon"
                                 Brush=(ImageSize=(X=32,Y=32),Texture=/Game/UI/Icons/T_RacePoints_Icon.T_RacePoints_Icon)
                              End Object
                              Size=(SizeRule=Auto)
                           End Object
                           Slot[1]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                              Content=Begin Object Class=/Script/UMG.TextBlock Name="RacePointsText"
                                 Text="5,000 RP"
                                 Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Regular.F_Borderlands_Regular,Size=24)
                                 ColorAndOpacity=(R=0,G=1,B=1,A=1)
                              End Object
                              Size=(SizeRule=Auto)
                           End Object
                        End Object
                        Size=(SizeRule=Auto)
                     End Object
                     
                     // Eridium
                     Slot[1]=Begin Object Class=/Script/UMG.VerticalBoxSlot
                        Content=Begin Object Class=/Script/UMG.HorizontalBox Name="EridiumBox"
                           Slot[0]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                              Content=Begin Object Class=/Script/UMG.Image Name="EridiumIcon"
                                 Brush=(ImageSize=(X=32,Y=32),Texture=/Game/UI/Icons/T_Eridium_Icon.T_Eridium_Icon)
                              End Object
                              Size=(SizeRule=Auto)
                           End Object
                           Slot[1]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                              Content=Begin Object Class=/Script/UMG.TextBlock Name="EridiumText"
                                 Text="100 E"
                                 Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Regular.F_Borderlands_Regular,Size=24)
                                 ColorAndOpacity=(R=0.8,G=0,B=1,A=1)
                              End Object
                              Size=(SizeRule=Auto)
                           End Object
                        End Object
                        Size=(SizeRule=Auto)
                     End Object
                     
                  End Object
                  Size=(SizeRule=Auto)
               End Object
               
            End Object
            Anchors=(Minimum=(X=0,Y=0),Maximum=(X=1,Y=0))
            Offsets=(Left=50,Top=50,Right=-50,Bottom=100)
         End Object
         
         // Tab Navigation
         Slot[2]=Begin Object Class=/Script/UMG.CanvasPanelSlot
            Content=Begin Object Class=/Script/UMG.HorizontalBox Name="TabBox"
               
               // Upgrades Tab
               Slot[0]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                  Content=Begin Object Class=/Script/UMG.Button Name="UpgradesTab"
                     Style=(Normal=(Tint=(R=1,G=0.5,B=0,A=1)),Hovered=(Tint=(R=1,G=0.7,B=0.2,A=1)))
                     Content=Begin Object Class=/Script/UMG.TextBlock Name="UpgradesTabText"
                        Text="UPGRADES"
                        Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Bold.F_Borderlands_Bold,Size=20)
                        Justification=Center
                     End Object
                  End Object
                  Size=(SizeRule=Fill,Value=1)
                  Padding=(Right=10)
               End Object
               
               // Vehicles Tab
               Slot[1]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                  Content=Begin Object Class=/Script/UMG.Button Name="VehiclesTab"
                     Style=(Normal=(Tint=(R=1,G=0.5,B=0,A=1)),Hovered=(Tint=(R=1,G=0.7,B=0.2,A=1)))
                     Content=Begin Object Class=/Script/UMG.TextBlock Name="VehiclesTabText"
                        Text="VEHICLES"
                        Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Bold.F_Borderlands_Bold,Size=20)
                        Justification=Center
                     End Object
                  End Object
                  Size=(SizeRule=Fill,Value=1)
                  Padding=(Right=10)
               End Object
               
               // Characters Tab
               Slot[2]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                  Content=Begin Object Class=/Script/UMG.Button Name="CharactersTab"
                     Style=(Normal=(Tint=(R=1,G=0.5,B=0,A=1)),Hovered=(Tint=(R=1,G=0.7,B=0.2,A=1)))
                     Content=Begin Object Class=/Script/UMG.TextBlock Name="CharactersTabText"
                        Text="CHARACTERS"
                        Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Bold.F_Borderlands_Bold,Size=20)
                        Justification=Center
                     End Object
                  End Object
                  Size=(SizeRule=Fill,Value=1)
                  Padding=(Right=10)
               End Object
               
               // Engine Classes Tab
               Slot[3]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                  Content=Begin Object Class=/Script/UMG.Button Name="EngineClassesTab"
                     Style=(Normal=(Tint=(R=1,G=0.5,B=0,A=1)),Hovered=(Tint=(R=1,G=0.7,B=0.2,A=1)))
                     Content=Begin Object Class=/Script/UMG.TextBlock Name="EngineClassesTabText"
                        Text="ENGINE CLASSES"
                        Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Bold.F_Borderlands_Bold,Size=20)
                        Justification=Center
                     End Object
                  End Object
                  Size=(SizeRule=Fill,Value=1)
                  Padding=(Right=10)
               End Object
               
               // Customization Tab
               Slot[4]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                  Content=Begin Object Class=/Script/UMG.Button Name="CustomizationTab"
                     Style=(Normal=(Tint=(R=1,G=0.5,B=0,A=1)),Hovered=(Tint=(R=1,G=0.7,B=0.2,A=1)))
                     Content=Begin Object Class=/Script/UMG.TextBlock Name="CustomizationTabText"
                        Text="CUSTOM"
                        Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Bold.F_Borderlands_Bold,Size=20)
                        Justification=Center
                     End Object
                  End Object
                  Size=(SizeRule=Fill,Value=1)
               End Object
               
            End Object
            Anchors=(Minimum=(X=0,Y=0),Maximum=(X=1,Y=0))
            Offsets=(Left=50,Top=150,Right=-50,Bottom=200)
         End Object
         
         // Content Area (Upgrades Panel)
         Slot[3]=Begin Object Class=/Script/UMG.CanvasPanelSlot
            Content=Begin Object Class=/Script/UMG.ScrollBox Name="UpgradesScrollBox"
               
               // Engine Upgrade
               Slot[0]=Begin Object Class=/Script/UMG.ScrollBoxSlot
                  Content=Begin Object Class=/Script/UMG.Border Name="EngineUpgradeBorder"
                     BrushColor=(R=0.1,G=0.1,B=0.1,A=0.8)
                     Content=Begin Object Class=/Script/UMG.HorizontalBox Name="EngineUpgradeBox"
                        
                        // Icon
                        Slot[0]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                           Content=Begin Object Class=/Script/UMG.Image Name="EngineIcon"
                              Brush=(ImageSize=(X=64,Y=64),Texture=/Game/UI/Icons/T_Engine_Icon.T_Engine_Icon)
                           End Object
                           Size=(SizeRule=Auto)
                           Padding=(Right=20)
                        End Object
                        
                        // Info
                        Slot[1]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                           Content=Begin Object Class=/Script/UMG.VerticalBox Name="EngineInfoBox"
                              
                              Slot[0]=Begin Object Class=/Script/UMG.VerticalBoxSlot
                                 Content=Begin Object Class=/Script/UMG.TextBlock Name="EngineTitle"
                                    Text="ENGINE TUNING"
                                    Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Bold.F_Borderlands_Bold,Size=24)
                                    ColorAndOpacity=(R=1,G=0.8,B=0,A=1)
                                 End Object
                                 Size=(SizeRule=Auto)
                              End Object
                              
                              Slot[1]=Begin Object Class=/Script/UMG.VerticalBoxSlot
                                 Content=Begin Object Class=/Script/UMG.TextBlock Name="EngineDescription"
                                    Text="Increase top speed and acceleration"
                                    Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Regular.F_Borderlands_Regular,Size=16)
                                    ColorAndOpacity=(R=0.8,G=0.8,B=0.8,A=1)
                                 End Object
                                 Size=(SizeRule=Auto)
                              End Object
                              
                              // Progress Bar
                              Slot[2]=Begin Object Class=/Script/UMG.VerticalBoxSlot
                                 Content=Begin Object Class=/Script/UMG.ProgressBar Name="EngineProgressBar"
                                    Percent=0.0
                                    FillColorAndOpacity=(R=0,G=1,B=1,A=1)
                                 End Object
                                 Size=(SizeRule=Auto)
                              End Object
                              
                           End Object
                           Size=(SizeRule=Fill,Value=1)
                        End Object
                        
                        // Purchase Button
                        Slot[2]=Begin Object Class=/Script/UMG.HorizontalBoxSlot
                           Content=Begin Object Class=/Script/UMG.Button Name="EngineUpgradeButton"
                              Style=(Normal=(Tint=(R=0,G=1,B=0,A=1)),Hovered=(Tint=(R=0.2,G=1,B=0.2,A=1)))
                              Content=Begin Object Class=/Script/UMG.TextBlock Name="EngineUpgradeButtonText"
                                 Text="500 RP"
                                 Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Bold.F_Borderlands_Bold,Size=18)
                                 Justification=Center
                              End Object
                           End Object
                           Size=(SizeRule=Auto)
                        End Object
                        
                     End Object
                  End Object
                  Padding=(Bottom=10)
               End Object
               
               // Additional upgrade slots would follow the same pattern...
               
            End Object
            Anchors=(Minimum=(X=0,Y=0),Maximum=(X=1,Y=1))
            Offsets=(Left=50,Top=250,Right=-50,Bottom=-50)
         End Object
         
         // Close Button
         Slot[4]=Begin Object Class=/Script/UMG.CanvasPanelSlot
            Content=Begin Object Class=/Script/UMG.Button Name="CloseButton"
               Style=(Normal=(Tint=(R=1,G=0,B=0,A=1)),Hovered=(Tint=(R=1,G=0.2,B=0.2,A=1)))
               Content=Begin Object Class=/Script/UMG.TextBlock Name="CloseButtonText"
                  Text="X"
                  Font=(FontObject=/Game/UI/Fonts/F_Borderlands_Bold.F_Borderlands_Bold,Size=24)
                  Justification=Center
               End Object
            End Object
            Anchors=(Minimum=(X=1,Y=0),Maximum=(X=1,Y=0))
            Offsets=(Left=-100,Top=50,Right=-50,Bottom=100)
         End Object
         
      End Object
   End Object
   
End Object
